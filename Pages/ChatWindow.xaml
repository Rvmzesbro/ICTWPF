<Page x:Class="ICT.Pages.ChatWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ICT.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChatWindow">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Width="100" HorizontalAlignment="Left">
            <ListView x:Name="LVMembers">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel>
                            <TextBlock Text="{Binding employee.Name}"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Button Content="Add User" Click="Button_Click" x:Name="AddUser"/>
            <Button Content="Change Topic" Click="Change_Topic"/>
            <Button Content="Leave Chatroom"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Width="420">
            <ListView x:Name="LVMessage">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Date, StringFormat='[HH:MM]'}"></TextBlock>
                            <TextBlock Text="{Binding employee.Name}" Margin="5 0 0 0"></TextBlock>
                            <TextBlock Text="{Binding Message}" Margin="5 0 0 0"></TextBlock>
                        </StackPanel>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <TextBox x:Name="MessageBox" Width="400" Height="120"></TextBox>
            <Button x:Name="SendButton" Width="120" Height="120" Background="LightSkyBlue">
                <TextBlock Text="Send" FontSize="20" FontWeight="Bold"></TextBlock>
            </Button>
        </StackPanel>
        <StackPanel Grid.Row="2" Grid.Column="0">
            <Button Content="Back" Click="Button_Click_1" Width="100" Height="20"></Button>
        </StackPanel>
    </Grid>
</Page>
