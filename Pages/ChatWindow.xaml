<Page x:Class="ICT.Pages.ChatWindow"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ICT.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChatWindow">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Width="100" HorizontalAlignment="Left">
            <DataGrid >
                <Button Content="Add User"/>
                <Button Content="Change"/>
                <Button/>
            </DataGrid>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" HorizontalAlignment="Left" Width="400">
            <ListBox>
                
            </ListBox>
        </StackPanel>

        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
            <TextBox x:Name="MessageBox" Width="400" Height="120"></TextBox>
            <Button x:Name="SendButton" Width="120" Height="120" Background="LightSkyBlue">
                <TextBlock Text="Send" FontSize="20" FontWeight="Bold"></TextBlock>
            </Button>
        </StackPanel>
    </Grid>
</Page>
